    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "electron": "^31.0.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.14",
    "axios": "^1.11.0",
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.1.5",
    "fs-extra": "^11.2.0",
